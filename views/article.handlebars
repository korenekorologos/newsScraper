<!--when someone wants to look at a certain artile
this will populate with that information -->

<div class="row">
    <h3 class="card">{{article.title}}</h3>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>

<div class="row">
    <div class="col s2"></div>
    <!--the form, that will handle post requets-->
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Tell us your thoughts about the article</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
            </div>

            <div class="input-field">
                <i class="material-icons prefix">leave a comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
            </div>

            <!--the "submit" is going to activate the form-->
        </div>
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></center>
            </div>
        </div>

    </form>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <!--where the content will go-->
        <h5>Leave a comment:</h5>
        {{#if artile.comment}}
        {{#each artile.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}</p>
        </div>
        {{/each}}
        {{else}}
        <p>We havent received any comments yet</p>
        {{/if}}

    </div>
</div>